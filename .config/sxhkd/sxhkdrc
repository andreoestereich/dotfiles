# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + p
	dmenu_run

# program launcher
super + shift + p
	linkhandler "$(xclip -o -sel clip)"

#
# bluetooth connecting
super + shift + b
    $HOME/.local/bin/bluetoothmenu

# pass launcher
super + shift + i
	passmenu

#clipboards mais importantes
super + shift + c
	favclips

#clipboards mais importantes
super + shift + f
	$TERMINAL -e nnn

# make sxhkd reload its configuration files:
super + Escape
	{pkill -USR1 -x sxhkd; notify-send "SXHKD config reloaded."; }

# Basic binds
alt + shift + k
    tgKbmap
super + c
    characterclip
super + w
    exefavs
super + shift + e
    texEDIT
super + shift + f
    $TERMINAL -e nnn
super + shift + p
    linkhandler "$( xclip -selection c -o )"
super + shift + m
	{ $TERMINAL -e neomutt; pkill -RTMIN+2 lemonblocks; }
super + shift + n
	$TERMINAL -e newsboat
super + shift + i
	$TERMINAL -e htop
super + shift + o
	$TERMINAL -e ncmpcpp &> /dev/null
super + shift + k
	$BROWSER
super + shift + r
	sxiv $HOME/.cache/meteogram

### Recording shit
#super + shift + r
#    dmenurecord
#super + r
#    dmenurecord kill

super + shift + t
     mpv --no-osc --no-input-default-bindings --input-conf=/dev/null --title='mpvfloat' /dev/video0

#Media keys
#XF86AudioPlay
#    mocp -G
#{XF86AudioNext,XF86AudioPrev}
#    mocp {-n,-p} &> v/null
XF86Audio{Next,Prev}
    mpc {next,prev}
XF86AudioPlay
    mpc toggle
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight {-inc,-dec} 5; pkill -RTMIN+5 lemonblocks;
{XF86AudioLowerVolume,XF86AudioRaiseVolume}
    {pamixer {-d,-i} 5; pkill -RTMIN+4 lemonblocks}
XF86AudioMute
    {pamixer -t; pkill -RTMIN+4 lemonblocks}

