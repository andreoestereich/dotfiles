# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + p
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Basic binds
alt + shift + k
    tgKbmap
super + w
    exefavs
super + shift + e
    texEDIT
super + shift + j
    passmenu
super + shift + p
    mario
super + shift + m
	$TERMINAL -e neomutt
super + shift + n
	$TERMINAL -e newsboat
super + shift + i
	$TERMINAL -e htop
super + shift + f
	$TERMINAL -e lf
super + shift + o
	$TERMINAL -e ncmpcpp &> /dev/null
super + shift + k
	$BROWSER

#Media keys
#XF86AudioPlay
#    mocp -G
#{XF86AudioNext,XF86AudioPrev}
#    mocp {-n,-p} &> v/null
XF86Audio{Next,Prev}
    mpc {next,prev}
XF86AudioPlay
    mpc toggle
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight {-inc,-dec} 5
{XF86AudioLowerVolume,XF86AudioRaiseVolume}
    {pamixer {-d,-i} 5;pkill -RTMIN+4 lemonblocks}
XF86AudioMute
    {pamixer -t;pkill -RTMIN+4 lemonblocks}

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	{bspc node -{c,k}; pkill -RTMIN+10 lemonblocks}
#
# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + shift + Return
	bspc node -s biggest.local --follow

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
#super + {_,shift + }{h,j,k,l}
#	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {j,k}
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	{bspc {desktop -f,node -d} '^{1-9,10}';pkill -RTMIN+10 lemonblocks}

super {comma,period}
    bspc monitor {prev,next}

# expand a window by moving one of its side outward
super + {h,l}
	tillresize {h,l}

# move a floating window
super + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
